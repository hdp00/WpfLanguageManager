<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageEditor"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" x:Class="LanguageEditor.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <StackPanel>

            <dxg:GridControl x:Name="grid" ItemsSource="{Binding Employees}" AutoGenerateColumns="None" Width="400" Height="400">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn FieldName="Id" Header="员工编号" Width="100" AllowEditing="False" Fixed="Left"/>
                    <dxg:GridColumn FieldName="Name" Header="姓名" Width="200"/>
                    <dxg:GridColumn FieldName="Position" Header="职位" Width="200"/>
                    <dxg:GridColumn FieldName="Salary" Header="薪资" Width="100"/>
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView x:Name="tableView" AutoWidth="False" ShowHorizontalLines="True" ScrollBarAnnotationMode="Custom" CellValueChanged="tableView_CellValueChanged"/>
                </dxg:GridControl.View>
            </dxg:GridControl>
            <Button x:Name="button" Content="Button" Click="button_Click"/>
            <Button x:Name="button_Delete" Content="Delete" Click="button_Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
